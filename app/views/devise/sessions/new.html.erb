<div class="flex flex-col items-center w-full px-10 my-4 text-gray-700 gap-2">

<h2  class= "text-3xl font-extrabold flex flex-col-3">Log in</h2>


<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { class: "font-semibold w-2/5 flex flex-col gap-3 relative items-start" }) do |f| %>
  <div class="flex flex-col w-full ">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md" %>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded-md" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="flex items-center gap-2">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class= "bg-green-500 text-white p-2 rounded-md">
    <%= f.submit "Log in" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
