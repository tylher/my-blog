<div class="flex flex-col items-center w-full px-10 my-4 text-gray-700 gap-2">

<h2  class= "text-3xl font-extrabold flex flex-col-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { class: "font-semibold w-2/5 flex flex-col gap-3 relative items-start" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="flex flex-col w-full ">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "rounded-md" %>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "rounded-md" %>
  </div>

  <div class="flex flex-col w-full">
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "rounded-md" %>
  </div>

    <%= f.submit "Sign up", class: "bg-green-500 text-white p-2 rounded-md" %>
<% end %>

</div>
