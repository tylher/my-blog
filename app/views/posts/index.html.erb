<h1>This is the list of posts of a particular user</h1>
<%= render partial:'shared/user_header', locals:{user: User.find(params[:user_id])} %>
<% @posts.each do |post| %>
   <%= render partial:'shared/post', locals:{post: post} %> 
   <% post.comments.each do |comment|%>
        <p><%= comment.author.name %>: <%= comment.text %></p>
   <% end %>
<% end %>