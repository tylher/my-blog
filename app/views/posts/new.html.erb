
<div class="flex flex-col items-center w-full px-10 my-4 text-gray-700 space-y-3">
    <h1 class= "text-3xl font-extrabold flex flex-col-3"> Create A New Post</h1>
    <%= form_with model: @post, url: user_posts_path, method: :post, local: true, scope: :post, class: "font-semibold w-2/5 flex flex-col gap-5 relative" do |f| %>
        <div class="flex flex-col">
        <%= f.label :title, 'Title: '%>
        <%= f.text_field :title, class:"rounded-md" %>
        </div>
        <div class="flex flex-col ">
        <%= f.label :text, 'Comment text: '%>
        <%= f.text_area :text, class:"rounded-md h-[200px]" %>
        </div>
        <div>
        <%= f.hidden_field :comments_counter, value: 0 %>
        </div>
        <div>
            <%= f.hidden_field :likes_counter, value: 0 %>
        </div>
        <%= f.submit 'create post', class:"absolute bottom-[-20px] bg-green-500 text-white p-2 rounded-md" %>
    <% end %>
</div>