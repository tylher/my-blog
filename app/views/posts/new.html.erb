
<div class="flex flex-col items-center w-full px-10 my-4 text-gray-700 space-y-3">
    <h1 class= "text-3xl font-extrabold flex flex-col-3"> Create A New Post</h1>
    <%= form_with model: @post, url: posts_path, method: :post, local: true, scope: :post, class: "font-semibold w-2/5 flex flex-col gap-5 relative items-start" do |f| %>
        <div class="flex flex-col w-full">
        <%= f.label :title, 'Title: '%>
        <%= f.text_field :title, class:"rounded-md" %>
        </div>
        <div class="flex flex-col w-full">
        <%= f.label :text, 'Comment text: '%>
        <%= f.text_area :text, class:"rounded-md h-[200px]" %>
        </div>
        <div class="flex flex-col w-full">
            <%= f.label :featured_image, "Cover Image"%>
            <%= f.file_field :featured_image, accept: "image/png, image/jpeg, image/gif"%>
        </div>
        
        <%= f.submit 'create post', class:"bg-green-500 text-white p-2 rounded-md" %>
    <% end %>
</div>