 <div class="hover:shadow-xl relative">
        <%= link_to post_path(post.title) do %>
        <div class="flex flex-col gap-2 ">
            <% if post.featured_image.attached? %>
            <div class="w-full h-36 rounded-md hover:rounded-s-md hover:rounded-b-none">
                <img src="<%= url_for(post.featured_image) %>" alt="cover image" class="w-full h-full rounded-md hover:rounded-s-md hover:rounded-b-none">
            </div>
            
            <% else %>
            <div class="w-full h-36 bg-gray-400 rounded-md hover:rounded-t-md hover:rounded-b-none"></div>
            <% end %>
            <div class="px-2 py-1 mb-8">
                 <h2 class="font-extrabold text-xl"><%= post.capitalize_title %></h2>
            <p class="break-words font-medium text-sm text-gray-600 "><%= post.text.truncate(60, seperator: " ") %></p> 
            </div>

            <div class="absolute bottom-0 w-full" >
            <div class="  flex items-center w-full px-2" >
                 <div>
                    <%= link_to "read more", post_path(post.title), method: :get, class: "font-bold text-xs " %>
                </div>
        
                <div class="flex items-center gap-3 absolute right-0 mr-2">
                    <%= button_to likes_path(post_id: post.id), class: "flex items-center gap-1" do %>
                        <i class="fa-regular fa-heart fa-xs"></i>  
                        <p class="text-xs font-bold"><%= post.likes_counter %> </p>         
                    <% end %>

                        <%= link_to post_path(post.title), method: :get, class: "relative flex items-center gap-1 " do %>
                            <p class="text-xs font-bold"><%= post.comments_counter %> </p> <i class="fa-regular fa-comment fa-xs"></i></i>           
                        <% end %>
                 </div>
            </div>
            </div>
       
            
        </div >
        <% end %>
</div>