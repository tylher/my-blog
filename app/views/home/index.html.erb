
<div class="flex flex-col  ">
<div class="w-[75%] px-12 flex flex-col items-end">
<%= button_to "Start Writing", "posts/new", class: "bg-blue-300 hover:bg-blue-500 font-semibold text-white py-2 px-5 mb-4 rounded-md", method: :get %>

<div class="w-full flex flex-col relative items-center justify-center ">
    <%= image_tag "pexels-pixabay-265667", class: "w-full blur-[2px]" %>
    <div class= "bg-[#00000099] w-full h-full absolute"></div>
    <div class="absolute text-white text-center  px-[50px] flex items-center flex-col gap-2">
        <h1 class="text-5xl font-bold">Unlocking Creativity and Connecting Minds</h1>
        <p class= "text-lg">Introducing BlogHub - Your All-In-One Blogging Destination for Inspiring Ideas and Thoughtful Discussions</p>
        <%= link_to "Get Started", new_user_registration_path, class: "bg-blue-500 p-3 rounded-full" %>
    </div>
</div>

<div class=" bg-white p-7 my-10 flex flex-col items-center gap-5">
    <div class=" grid grid-cols-1 lg:grid-cols-3 md:grid-cols-2 gap-7  ">
    <% @posts.each do |post| %>
    <%= link_to post_path(post.title), class: "relative" do %>
        <div class="flex flex-col gap-2 relative mb-12">
            <% if post.featured_image.attached? %>
            <div class="w-full h-36 rounded-md">
                <img src="<%= url_for(post.featured_image) %>" alt="cover image" class="w-full h-full rounded-md">
            </div>
            
            <% else %>
            <div class="w-full h-36 bg-gray-400 rounded-md"></div>
            <% end %>
            <h2 class="font-extrabold text-xl"><%= post.capitalize_title %></h2>
            <p class="break-words font-medium text-sm text-gray-600 "><%= post.text.truncate(60, seperator: " ") %></p>  
        </div >
        <div class="absolute bottom-0 flex justify-between w-full" >
        <%= button_to "read more", post_path(post.title), method: :get, class: "font-bold text-xs " %>
        <div class="flex items-center gap-3">
           
            
            <%= button_to post_path(post.title), method: :post, class: "flex items-center gap-1 " do %>
                 <p class="text-xs font-bold"><%= post.likes_counter %> </p> <i class="fa-regular fa-heart fa-xs"></i>           
            <% end %>
            <%= button_to post_path(post.title), method: :post, class: "flex items-center gap-1 " do %>
                 <p class="text-xs font-bold"><%= post.likes_counter %> </p> <i class="fa-regular fa-comment fa-xs"></i></i>           
            <% end %>
        </div>
        </div>
       <% end %>
    <% end %>
</div>
<%== pagy_nav(@pagy) if @pagy.pages > 1 %>
</div>
 

</div>
    


</div>
