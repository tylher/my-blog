<h1>Here is the profile of a given user</h1>

 <%= render partial:'shared/user_header', locals:{user: @user} %>
 <section>
    <h2>Bio</h2>
    <p><%= @user.bio %></p>
 </section>
 <section>
    <% @user.posts.each do |post| %>
    <%= link_to user_post_path(post) do %>
        <h2><%= post.title%></h2>
        <p><%=post.text %></p>
        <div>
        <p>comments: <%= post.comments_counter%></p>
        <p>likes: <%= post.likes_counter%></p>
        </div>
        <% end %>
    <% end %>
 </section>